				<%= f.text_field :phone, required: true, class: 'form-control' %>

				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>

				<%= f.submit "Schedule Visit", class: "btn btn-block btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
